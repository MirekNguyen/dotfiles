# general settings
max-items 20
history-limit 0
cleanup-on-quit yes
confirm-mark-feed-read no
prepopulate-query-feeds yes
show-title-bar no
show-keymap-hint no
refresh-on-startup yes

# browser
browser "open '%u'"

# reload
auto-reload yes
reload-time 10
reload-threads 10

# bookmark
bookmark-cmd ~/.config/dotfiles/config/newsboat/rss-open-url.sh
bookmark-autopilot yes

# macro
bind-key SPACE macro-prefix
macro o bookmark; toggle-article-read "read"; prev;

# key bindings
unbind-key o
bind-key o bookmark
bind-key ; toggle-article-read

# vim key bindings
unbind-key j
unbind-key k
unbind-key g
unbind-key G
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key g home
bind-key G end

# ignore
ignore-mode "display"
ignore-article "*" "title =~ \"\#shorts\" or title =~ \"LIVE\""

