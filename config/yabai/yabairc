# Load sa
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Config
yabai -m config window_shadow off
yabai -m config layout bsp

# Layout
yabai -m config --space 1 layout bsp
yabai -m config --space 2 layout bsp
yabai -m config --space 3 layout bsp
yabai -m config --space 4 layout bsp

# Padding and gaps
yabai -m config top_padding    00
yabai -m config bottom_padding 00
yabai -m config left_padding   10
yabai -m config right_padding  10
yabai -m config window_gap     10

# Mouse
yabai -m config mouse_modifier alt
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse autofocus

# Space
yabai -m rule --add app="^Firefox$" space=^1
yabai -m rule --add app="^kitty$" space=^2
yabai -m rule --add app="^Finder$" space=^3
yabai -m rule --add app="^(mpv)$" space=^4 native-fullscreen=on
# yabai -m rule --add app="^(LibreOffice|Google Chrome|Docker|Microsoft Word|Photos|Maps|Mail|zathura|sioyek|Preview)$" space=^4
# yabai -m rule --add app="^(Parallels Desktop|Fedora Linux|Windows 11)$" space=^4
# yabai -m rule --add app="^(Honkai|Genshin|mpv)" space=^4 native-fullscreen=on
# yabai -m rule --add app!="^(Firefox|kitty|Finder|Alfred)$" space=^4

# Apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add title="^Developer Tools" manage=off grid=6:4:1:1:2:4


function setup_space {
  local idx="$1"
  local name="$2"
  local space=
  echo "setup space $idx : $name"

  space=$(yabai -m query --spaces --space "$idx")
  if [ -z "$space" ]; then
    yabai -m space --create
  fi

  yabai -m space "$idx" --label "$name"
}

setup_space 1 firefox
setup_space 2 kitty
setup_space 3 file-manager
setup_space 4 other
